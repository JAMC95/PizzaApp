extends layout
block head 
    -var active = 'order';
block content
  h1 Administrar pedidos
  
  .row 
    .col-lg-12
      table.table
        thead
          tr
            th Usuario
            th Fecha
            th Estado de pedidos
            th Aviso por email
            th Cambiar estado del pedido
        tbody
          each order in orders
            tr
              td #{order.customer.username}
              td #{order.order_date}
              td #{order.state}
              td #{order.email_on_ready}
              td 
                | Pending 
                | Preparing
                | Ready 
  
